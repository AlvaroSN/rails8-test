<div class="mx-auto font-bold rounded-lg py-5 px-10">
  <%= form_for([:admin, @user]) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block" %>
      <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>
    <div class="mb-4">
      <%= f.label :role_id, 'Role', class: "block" %>
      <%= f.collection_select :role_id, Role.all, :id, :name, {}, class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>
    <div class="flex justify-end gap-5 mb-4">
      <%= link_to 'Return', admin_users_path, class: "btn" %>
      <%= f.submit @user.new_record? ? 'Create' : 'Update', class: "btn btn-info" %>
    </div>
  <% end %>
</div>