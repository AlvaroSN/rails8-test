<table class="min-w-full mt-5">
    <thead>
      <tr class="bg-gray-700 text-white">
        <th class="px-6 py-3 text-left">Email</th>
        <th class="px-6 py-3 text-left">Role</th>
        <th class="px-6 py-3 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td class="px-6 py-4"><%= user.email %></td>
          <td class="px-6 py-4"><%= user.role.name %></td>
          <td class="px-6 py-4">
            <%= link_to 'Mostrar', admin_user_path(user), class: "btn btn-sm btn-info" %>
            <%= link_to 'Editar', edit_admin_user_path(user), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>