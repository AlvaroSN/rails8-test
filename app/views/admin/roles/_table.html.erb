<table class="min-w-full mt-5">
    <thead>
      <tr class="bg-gray-700 text-white">
        <th class="px-6 py-3 text-left">Nombre</th>
        <th class="px-6 py-3 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% roles.each do |role| %>
        <tr>
          <td class="px-6 py-4"><%= role.name %></td>
          <td class="px-6 py-4">
            <%= link_to 'Mostrar', admin_role_path(role), class: "btn btn-sm btn-info" %>
            <%= link_to 'Editar', edit_admin_role_path(role), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Eliminar', admin_role_path(role), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @roles %>