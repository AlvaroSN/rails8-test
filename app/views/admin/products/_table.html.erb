<table class="min-w-full mt-5">
  <thead>
    <tr class="bg-gray-700 text-white">
      <th class="px-6 py-3 text-left">Nombre</th>
      <th class="px-6 py-3 text-left">Descripción</th>
      <th class="px-6 py-3 text-left">Precio</th>
      <th class="px-6 py-3 text-left">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
      <tr>
        <td class="px-6 py-4"><%= product.name %></td>
        <td class="px-6 py-4"><%= product.description %></td>
        <td class="px-6 py-4"><%= number_to_currency(product.price) %></td>
        <td class="px-6 py-4">
          <%= link_to 'Mostrar', admin_product_path(product), class: "btn btn-sm btn-info" %>
          <%= link_to 'Editar', edit_admin_product_path(product), class: "btn btn-sm btn-warning" %>
          <%= link_to 'Eliminar', admin_product_path(product), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products %>