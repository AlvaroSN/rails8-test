<div class="container mx-auto bg-gray-800 text-white font-bold rounded-lg py-5 px-10">
  <h2 class="text-2xl font-bold text-center mt-10">Iniciar Sesión</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block" %>
      <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>
    <div class="mb-4">
      <%= f.submit "Iniciar Sesión", class: "btn btn-lg btn-info" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

