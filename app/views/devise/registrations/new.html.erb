<div class="container mx-auto bg-gray-800 text-white font-bold rounded-lg py-5 px-10">
  <h2 class="text-2xl font-bold text-center mt-10">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded text-gray-800" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: "btn btn-lg btn-info" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
